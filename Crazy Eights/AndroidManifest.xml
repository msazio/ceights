<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="maggie.eights"
    android:versionCode="2"
    android:versionName="2.0" >

    <uses-sdk android:minSdkVersion="10" />

    <application
        android:icon="@drawable/s8"
        android:label="@string/app_name" >
        
        
        <activity android:name="MainMenu" android:screenOrientation="sensor"
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="HelpScreen" android:screenOrientation="sensor" 
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter >
                <action android:name="HELP" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity android:name="GameScreen" android:screenOrientation="landscape" 
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter >
                <action android:name="PLAY_GAME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>   
        
        
    </application>

</manifest>